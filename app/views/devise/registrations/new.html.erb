<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),  html: { multipart: true }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ps-2 col-6 border border-2 border-secondary-subtle rounded", style:"height: 35px"  %>
  </div>

  <div class="field">
    <%= f.label :password, "Password" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %><br>
    <%= f.password_field :password, autocomplete: "new-password", class: "ps-2 col-2 border border-2 border-secondary-subtle rounded", style:"height: 35px"  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar password" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "ps-2 col-2 border border-2 border-secondary-subtle rounded", style:"height: 35px" %>
  </div>
  <br>

  <div class="my-2">
    <%= f.label :name, "Nombre", class: "col-6" %><br>
    <%= f.text_field :name, required: true, class: "ps-2 col-6 border border-2 border-secondary-subtle rounded", style:"height: 35px" %>
  </div>

  <div class="my-2">
    <%= f.label :phone, "Teléfono", class: "col-6" %><br>
    <%= f.text_field :phone, required: true, class: "ps-2 col-2 border border-2 border-secondary-subtle rounded", style:"height: 35px" %>
  </div>

  <div class="my-2 col-12 col-md-8">
    <%= f.label :picture, "Formato relación 1:1 - Tamaño máx 1 Mb", class: "col-12" %>
    <br>
    <div class="my-2 col-12 col-md-8">
    <%= f.file_field :picture, required: true, class: "ps-2 py-1 col-8 border border-2 border-secondary-subtle rounded", style:"height: 40px" %>
    </div>
  </div>

 
  <div class="actions">
     <%= f.submit "Registrar", class: "btn btn-secondary" %>
  </div>
<% end %>
